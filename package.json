{
  "name": "action-coverage-summary-markdown",
  "version": "1.0.6",
  "description": "GitHub action to generate markdown outputs from coverage-summary.json",
  "main": "index.js",
  "repository": "git@github.com:autoscatto/action-coverage-summary-markdown.git",
  "author": "autoscatto <4utoscatto@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "c8": "^8.0.1",
    "eslint": "^8.48.0",
    "eslint-plugin-github": "^4.10.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.4",
    "jest-circus": "^29.6.4",
    "prettier": "^3.0.3"
  },
  "scripts": {
    "format": "prettier --write **/*.js",
    "format-check": "prettier --check **/*.js",
    "lint": "eslint **/*.js",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "c8 jest",
    "all": "yarn format && yarn lint && yarn package && yarn test"
  },
  "c8": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/dist/**/*.js",
      "**/coverage/**/*.js",
      "**/c8/**",
      "jest.config.js"
    ],
    "report-dir": "c8/report",
    "reporter": [
      "cobertura",
      "html",
      "json-summary",
      "json"
    ],
    "temp-directory": "c8/.nyc_output",
    "all": true,
    "skip-full": true
  },
  "files": [
    "action.yml",
    "templates",
    "dist"
  ]
}
